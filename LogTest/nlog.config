<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="logfile" xsi:type="File" fileName="infoLog.log" layout="`${longdate}|${level:uppercase=true}|${logger}|${message:withexception=true}`"/>
        <target name="logfile2" xsi:type="File" fileName="appLog.log" layout="`${longdate}|${level:uppercase=true}|${logger}|${message:withexception=true}`"/>
        <target name="logconsole" xsi:type="Console" />
    </targets>

    <rules>
        <logger name="*" level="Info" writeTo="logfile" />
        <logger name="*" level="Debug" writeTo="logconsole" />
        <logger name="*" levels="Trace,Warn,Error,Fatal" writeTo="logfile2"/>
        
    </rules>
</nlog>